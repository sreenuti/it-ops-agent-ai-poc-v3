apiVersion: v1
kind: Secret
metadata:
  name: itops-agent-secrets
  namespace: itops-agent
  labels:
    app: itops-agent
type: Opaque
stringData:
  # OpenAI API Key (REQUIRED)
  OPENAI_API_KEY: "your_openai_api_key_here"
  
  # AWS Credentials (OPTIONAL - only if using AWS executors)
  AWS_ACCESS_KEY_ID: ""
  AWS_SECRET_ACCESS_KEY: ""
  AWS_PROFILE: ""
  
  # Windows Domain Credentials (OPTIONAL - only if using Windows executors)
  WINDOWS_DOMAIN: ""
  WINDOWS_USERNAME: ""

---
# Instructions:
# 1. Copy this file to secret.yaml (DO NOT commit secret.yaml to git)
# 2. Replace placeholder values with actual secrets
# 3. Apply using: kubectl apply -f k8s/secret.yaml
# 4. Alternatively, use kubectl create secret:
#    kubectl create secret generic itops-agent-secrets \
#      --from-literal=OPENAI_API_KEY=your_key \
#      --namespace=itops-agent

